<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.Controller" alignment="center" hgap="10" vgap="10">
    <!-- for the user to enter the name -->
    <TextField fx:id="nameField" GridPane.columnIndex="0" GridPane.rowIndex="0" onKeyReleased="#handleKeyReleased"/>
    <!--    onKeyReleased indicates that an event handler will be triggered when a key release occurs after pressing a button on the keyboard-->
    <Button fx:id="helloButton" text="Say Hello" GridPane.rowIndex="1" GridPane.columnIndex="0"
            onAction="#onButtonClick"/>
    <Button fx:id="byeButton" text="Say Bye" GridPane.rowIndex="1" GridPane.columnIndex="1" onAction="#onButtonClick"/>
    <CheckBox fx:id="ourCheckBox" text="Clear the field after saying hello or bye" GridPane.rowIndex="2"
              GridPane.columnIndex="0"
              GridPane.columnSpan="2"/>
    <Label fx:id="ourLabel" text="Nothing has happened" GridPane.rowIndex="3" GridPane.columnIndex="0"/>


</GridPane>